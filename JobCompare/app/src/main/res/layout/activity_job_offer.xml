<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:text="Edit Current Job Offer"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="@style/TextAppearance.AppCompat.Large">

    </TextView>

    <LinearLayout
        android:id="@+id/existingoffer1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/existingoffer2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Existing Offers:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Spinner
            android:id="@+id/existingoffer"
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:background="@android:color/transparent"
            style="@style/Widget.AppCompat.Spinner.DropDown"
            android:spinnerMode="dropdown"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Title:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:maxLength="15"
                    android:digits="0123456789qwertzuiopasdfghjklyxcvbnm "
                    android:hint="Title" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/company1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/company2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Company"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/company"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:maxLength="25"
                    android:digits="0123456789qwertzuiopasdfghjklyxcvbnm "
                    android:hint="Company" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/city1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/city2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="City:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:maxLength="15"
                    android:digits="0123456789qwertzuiopasdfghjklyxcvbnm "
                    android:hint="City" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/state1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:layout_marginTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/state2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="State:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/state"
                    android:layout_width="190dp"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    style="@style/Widget.AppCompat.Spinner.DropDown"
                    android:spinnerMode="dropdown"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/cost_of_living1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cost_of_living2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Cost Of Living:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/cost_of_living"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="3"
                    android:digits="0123456789"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/yearly_salary1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yearly_salary2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Yearly Salary:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/yearly_salary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:hint="Yearly Salary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/yearly_bonus1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yearly_bonus2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Yearly Bonus:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/yearly_bonus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:hint="0-10000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/retirement_benefit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/retirement_benefit2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Retirement Benefit"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/retirement_benefit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="3"
                    android:hint="Retirement Benefit" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/relocation_stipend1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/relocation_stipend2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Relocation Stipend:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/relocation_stipend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:hint="Relocation Stipend" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/restricted_stock1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/restricted_stock2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Restricted Stock"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/retirement_stock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:digits="0123456789."
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:hint="Restricted Stock" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/cancel"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:onClick="handleCancelClick"
                    android:text=" Cancel   "
                    android:textSize="15sp"
                    app:layout_constraintWidth_default="wrap" />

                <Button
                    android:id="@+id/save"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginHorizontal="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=" Save   "
                    android:onClick="createJob"
                    app:layout_constraintWidth_default="wrap"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/enteranotheroffer"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginHorizontal="40dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:onClick="restartJob"
                    android:text=" Enter Another Offer   "
                    android:textSize="15sp"
                    app:layout_constraintWidth_default="wrap" />
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/button5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:weightSum="3">

                <Button
                    android:id="@+id/comparetheoffer"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="compareTheOffer"
                    android:text=" Compare This Offer  "
                    app:layout_constraintWidth_default="wrap"
                    android:textSize="14sp"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/delete1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="0"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/delete"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginBottom="40dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=" Delete This Offer  "
                    android:onClick="deleteJob"
                    app:layout_constraintWidth_default="wrap"
                    android:textSize="14sp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>s
</LinearLayout>
